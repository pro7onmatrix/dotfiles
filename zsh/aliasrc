# User specific aliases and functions
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# some more ls aliases
alias ls='ls --color=auto'
alias ll='ls -lhF'
alias la='ls -lhAF'
alias l='ls -CF'

alias grep='grep --color=auto'
alias vim='nvim'

alias gs='git status'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gp='git push'
alias gco='git checkout'

# just to be sure...
alias ghostscript='/usr/bin/gs'

